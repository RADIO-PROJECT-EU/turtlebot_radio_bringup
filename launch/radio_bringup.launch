<?xml version="1.0"?>
<launch>

  <!-- NOTE: PLEASE export each of the following arguments in .bashrc file -->
  <!-- e.g. export TURTLEBOT_REAR_CAM=logitechc90 -->
  <arg name="rear_cam" default="$(env TURTLEBOT_RADIO_REAR_CAM)"/>
  <arg name="3d_sensor" default="$(env TURTLEBOT_3D_SENSOR)"/>
  <arg name="lidar" default="$(env TURTLEBOT_LIDAR)"/>
  
  <!-- start robot_state_publisher - publish fixed transforms, load robot model to param server -->
  <!--include file="$(find turtlebot_radio)/launch/turtlebot_radio_xtion.launch"/-->

  <!-- start summit_xl_controller node -->
  <include file="$(find turtlebot_radio_bringup)/launch/minimal.launch">
  	 <arg name="battery" value="false"/>
  	 <arg name="rear_cam" value="$(arg rear_cam)"/>
  	 <arg name="3d_sensor" value="$(arg 3d_sensor)"/>
  	 <arg name="lidar" value="$(arg lidar)"/>
  </include>

  <!-- start turtlebot ps3joy node -->
  <include file="$(find turtlebot_teleop)/launch/ps3_teleop.launch" />

  <!-- start hokuyo node --> 
  <include file="$(find turtlebot_radio_bringup)/launch/hokuyo_laser.launch" />
  
  <!-- start usb_cam node -->
  <include if="$(arg rear_cam)" file="$(find turtlebot_radio_bringup)/launch/usb_cam.launch"/>

  <!-- start openni2 (for Asus xtion or Kinect) -->
  <!--include file="$(find openni2_launch)/launch/openni2.launch">
	<arg name="camera" value="radio_cam"/>
	<arg name="publish_tf" value="false"/>
  </include-->

  <!-- start orbbec -->
  <include file="$(find turtlebot_radio_bringup)/launch/orbbec_camera.launch"/>

</launch>
